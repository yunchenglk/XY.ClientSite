<script type="text/javascript">
    $(function () {
        var result = $.GetApiData(apiurl + "/News/" + '@ViewBag.ID');
        if (result.status == 1) {
            $("#ClassName,#Meta").html(result.data.Title);
            $("#content_title").html("<b>" + result.data.Title + "</b>");
            $("#ClassName,#wz_ClassName").html(result.data.ClassName);
            $("#metitle").append("|" + result.data.Title);
            $("#content").html(result.data.DescriptionStr);
            $("#Publisher").html(result.data.Publisher);
            $("#Count").html(result.data.Count);
            $(".loading").hide();
        }
    })
</script>

