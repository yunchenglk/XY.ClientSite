<script src="~/Content/jquery.form.js"></script>
<script type="text/javascript">
    $(function () {
        var result = $.GetApiData(apiurl + "/Content/" + urlitems.srdj);
        if (result.status == 1) {
            $("#content").html(result.data.DescriptionStr);
        }
    })
    function _subform() {
        if ($.trim($("#Content").val()).length == 0 || $.trim($("#Name").val()).length == 0 || $.trim($("#Phone").val()).length == 0) {
            alert("请输入留言内容");
            return;
        }
        $("#Content").val(encodeURIComponent($("#Content").val()));
        $("#contact").ajaxSubmit(function (result) {
            if (result.error == "0")
                window.location.reload()
            alert(result.message);
        })
    }
</script>
